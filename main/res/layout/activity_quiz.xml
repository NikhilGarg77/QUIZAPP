<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall21"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView

        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:padding="4dp"
        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Question to answer:"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"

        android:textStyle="normal|bold" />


    <Button
        android:textSize="20sp"
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"

        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_style"
        android:onClick="onClick"
        android:padding="8dp"
        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="A" />

    <Button
        android:textSize="20sp"
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice1"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_style"
        android:onClick="onClick"
        android:padding="8dp"

        android:text="B"
        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1" />

    <Button
        android:textSize="20sp"
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice2"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_style"
        android:onClick="onClick"
        android:padding="8dp"

        android:text="C"
        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1" />

    <Button
        android:textSize="20sp"
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice3"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_style"
        android:onClick="onClick"
        android:padding="8dp"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="D"
        android:textColor="#382938" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/choice4"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_marginTop="50dp">

        <TextView
            android:textSize="20sp"
            android:id="@+id/score_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed"
            android:gravity="center"
            android:text="Score:"
            android:textColor="#382938"
            android:shadowColor="#455B58"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

        <TextView
            android:textSize="20sp"
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed"
            android:gravity="center"
            android:text="0/0"
            android:textColor="#382938"
            android:shadowColor="#455B58"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textAppearance="@android:style/TextAppearance.Large" />

    </LinearLayout>
</RelativeLayout>