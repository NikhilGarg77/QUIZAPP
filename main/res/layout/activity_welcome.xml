<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/wall21"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"

        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:text="Welcome"
        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:textSize="20sp"
        android:id="@+id/startquiz"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/resultView"
        android:layout_alignLeft="@+id/resultView"
        android:layout_gravity="center"
        android:layout_marginTop="99dp"
        android:background="@drawable/btn_style"

        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Start Quiz" />
    <TextView
        android:layout_marginTop="0dp"
        android:id="@+id/startQuizWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startquiz"
        android:text="                  **Once the quiz starts, you are not allowed to go back"
        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"/>
    <Button
        android:textSize="20sp"
        android:id="@+id/create"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_style"
        android:layout_below="@+id/startQuizWarning"
        android:layout_alignLeft="@+id/startquiz"
        android:textColor="#382938"
        android:shadowColor="#455B58"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        android:text="Create Quiz" />

    <Button
        android:textSize="20sp"
            android:id="@+id/logout"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_style"
            android:layout_below="@+id/create"
            android:layout_alignLeft="@+id/startquiz"
            android:textColor="#382938"
            android:shadowColor="#455B58"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:text="Log Out" />




</RelativeLayout>